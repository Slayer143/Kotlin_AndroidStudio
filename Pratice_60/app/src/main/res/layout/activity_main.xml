<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/previousA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:visibility="gone" />

    <EditText
        android:id="@+id/aValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:text="@string/aValue" />

    <TextView
        android:id="@+id/previousB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:visibility="gone" />

    <EditText
        android:id="@+id/bValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberSigned|number"
        android:text="@string/bValue" />

    <TextView
        android:id="@+id/previousC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:visibility="gone" />

    <EditText
        android:id="@+id/cValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberSigned|number"
        android:text="@string/cValue" />

    <Button
        android:id="@+id/calculateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/calculateButton" />

    <Button
        android:id="@+id/sendButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sendButton"
        android:visibility="invisible"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/resultBlock"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/resultBlock" />

</LinearLayout>